{
    "name": "microservices/api-gateway",
    "description": "API Gateway for microservices aggregation",
    "type": "project",
    "require": {
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }
}